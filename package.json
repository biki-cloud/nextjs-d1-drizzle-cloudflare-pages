{
  "name": "nextjs-d1-drizzle-cloudflare-pages",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "db:generate": "drizzle-kit generate",
    "db:migrate:dev": "pnpm setup:dev && wrangler d1 migrations apply nextjs-d1-drizzle-cloudflare-pages --local",
    "db:migrate:prod": "pnpm setup:prod && wrangler d1 migrations apply nextjs-d1-drizzle-cloudflare-pages --remote",
    "db:studio:dev": "pnpm setup:dev && cross-env DB_LOCAL_PATH=$(find .wrangler/state/v3/d1/miniflare-D1DatabaseObject -type f -name '*.sqlite' -print -quit) drizzle-kit studio --port 3094",
    "db:studio:prod": "pnpm setup:prod && drizzle-kit studio --port 3098",
    "build": "next build",
    "setup:dev": "cp .env.development .env && cp .env.development .env.production.local && cp wrangler.toml.development wrangler.toml",
    "setup:prod": "cp .env.production .env && cp .env.production .env.production.local && cp wrangler.toml.production wrangler.toml",
    "dev": "pnpm setup:dev && next dev",
    "pages:build": "opennextjs-cloudflare build",
    "pages:dev": "pnpm setup:dev && pnpm pages:build && pnpm wrangler dev .open-next/worker.js --port=3000",
    "pages:deploy": "pnpm setup:prod && pnpm pages:build && pnpm wrangler pages deploy"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.81.1",
    "@tanstack/react-query": "^5.62.10",
    "next": "^14.2.33",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "server-only": "^0.0.1",
    "superjson": "^2.2.2",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@opennextjs/cloudflare": "^1.12.0",
    "@cloudflare/workers-types": "^4.20241224.0",
    "@t3-oss/env-nextjs": "^0.11.1",
    "@types/better-sqlite3": "^7.6.12",
    "@types/node": "^22.10.2",
    "@types/react": "^18.3.1",
    "@types/react-dom": "^18.3.1",
    "@eslint/eslintrc": "^3.2.0",
    "@typescript-eslint/eslint-plugin": "^8.46.4",
    "@typescript-eslint/parser": "^8.46.4",
    "better-sqlite3": "^11.7.0",
    "cross-env": "^7.0.3",
    "drizzle-kit": "^0.23.0",
    "drizzle-orm": "^0.31.0",
    "eslint": "^9.39.1",
    "eslint-plugin-drizzle": "^0.2.3",
    "eslint-plugin-react": "^7.37.3",
    "eslint-plugin-react-hooks": "^5.1.0",
    "@next/eslint-plugin-next": "^14.2.33",
    "postcss": "^8.4.49",
    "prettier": "^3.4.2",
    "prettier-plugin-tailwindcss": "^0.6.9",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.7.2",
    "wrangler": "^4.38.0"
  },
  "packageManager": "pnpm@9.15.1"
}
